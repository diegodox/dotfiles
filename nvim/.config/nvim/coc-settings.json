{
    "diagnostic.virtualText": true,
    "diagnostic.virtualTextCurrentLineOnly": false,
    "diagnostic.messageTarget": "echo",
    "diagnostic.refreshOnInsertMode": true,
    "suggest.noselect": false,
    "suggest.preferCompleteThanJumpPlaceholder": true,
    "suggest.enablePreselect": true,
    "coc.source.around.enable": false,
    "coc.source.buffer.enable": false,
    "coc.preferences.formatOnSaveFiletypes": ["rust", "cpp", "py", "sh"],
    "rust-analyzer.server.path": "/usr/bin/rust-analyzer",
    "rust-analyzer.inlayHints.refreshOnInsertMode": true,
    "rust-analyzer.checkOnSave.command": "clippy",
    "rust-analyzer.cargo.allFeatures": true,
    "clangd.fallbackFlags": ["-std=c++17"],
    "lightbulb.enableSign": true,
    "sumneko-lua.enableNvimLuaDev": true,
    "lightbulb.signText": "ðŸ’¡",
    "lightbulb.enableVirtualText": false,
    "diagnostic-languageserver.filetypes": {
        "sh": "shellcheck"
    },
    "diagnostic-languageserver.formatFiletypes": {
      "sh": "shfmt"
    },
    "diagnostic-languageserver.formatters": {
        "shfmt": {
            "command": "shfmt",
            "args": ["-i", "4", "-bn", "-ci", "-sr"]
        }
    }
}
